<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sorryjako.com.sorryjako.Main"
    android:weightSum="4"
    android:background="#FFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingTop="16dp"
        android:weightSum="2"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/id_game_babisTOP_BT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rotation="180"
            android:background="#FFF"
            android:layout_weight="1"
            android:scaleType="centerInside"
            app:srcCompat="@mipmap/babis_close" />

        <ImageButton
            android:id="@+id/id_game_zemanTOP_BT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rotation="180"
            android:layout_weight="1"
            android:background="#FFFF"
            android:scaleType="centerInside"
            app:srcCompat="@mipmap/zeman_close" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="2"
        android:rotation="180"
        android:orientation="vertical">


        <LinearLayout
            android:layout_weight="1"
            android:background="@mipmap/bg_red"
            android:layout_marginTop="-5dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:paddingTop="15dp"
                android:id="@+id/id_game_textTOP_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="YYYY" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/id_game_hisScoreTOP_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/id_game_textTOP_TV"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:ems="10"
                android:textColor="#EF0000"
                android:textSize="20dp"
                android:textStyle="bold"

                android:text="Sorry jako" />

            <TextView
                android:id="@+id/id_game_scoreTOP_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:textColor="#27286D"
                android:textSize="20dp"
                android:textStyle="bold" />


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="2">



        <LinearLayout
            android:layout_weight="1"
            android:layout_marginBottom="-5dp"
            android:background="@mipmap/bg_blue"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/id_game_textBOT_TV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:layout_marginBottom="8dp"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center"
                android:paddingTop="15dp"
                android:textColor="#FFFFFF"
                android:text="XXXX" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:paddingRight="16dp">


            <TextView
                android:id="@+id/id_game_scoreBOT_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="#27286D"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/id_game_hisScoreBOT_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:textColor="#EF0000"
                android:textSize="20dp"
                android:textStyle="bold"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:paddingBottom="16dp"
        android:weightSum="2">

        <ImageButton
            android:id="@+id/id_game_zemanBOT_BT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFF"
            android:scaleType="centerInside"
            app:srcCompat="@mipmap/zeman_close" />

        <ImageButton
            android:id="@+id/id_game_babisBOT_BT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFF"
            android:maxWidth="64dp"
            android:scaleType="centerInside"
            app:srcCompat="@mipmap/babis_close" />
    </LinearLayout>
</LinearLayout>


