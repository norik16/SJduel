<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sorryjako.com.sorryjako.Main"
    android:weightSum="3"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/id_victory_layoutTOP"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RelativeLayout
            android:id="@+id/id_victory_conffetiTOP_IV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:rotation="180"
            tools:ignore="ContentDescription"  />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/id_victory_elseTOP_TV"
                    android:layout_width="match_parent"
                    android:textSize="16dp"
                    android:textColor="#EF0000"
                    android:paddingBottom="10dp"
                    android:text="x"
                    android:rotation="180"
                    android:gravity="center"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/id_victory_scoreTOP_TV"
                    android:layout_width="match_parent"
                    android:textColor="#EF0000"
                    android:gravity="center"
                    android:text="x"
                    android:textStyle="bold"
                    android:rotation="180"
                    android:textSize="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/id_victory_winTOP_TV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:rotation="180"
                    android:textStyle="bold"
                    android:textSize="40dp"
                    android:textColor="#EF0000"
                    android:text="XXXXAXXXXX"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:weightSum="0"
        android:background="@mipmap/bg_blue"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/id_victory_restart_BT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#27286D"
                app:srcCompat="@mipmap/replay"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_marginLeft="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/id_victory_count_VT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="10"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="42dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_marginRight="30dp"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/id_victory_end_BT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#27286D"
                app:srcCompat="@mipmap/exit"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/id_victory_layoutBOT"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RelativeLayout
            android:id="@+id/id_victory_conffetiBOT_IV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-15dp"
            android:scaleType="fitXY"
            tools:ignore="ContentDescription"  />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/xxx"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/id_victory_winBOT_TV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:textSize="40dp"
                    android:textStyle="bold"
                    android:textColor="#27286D"
                    android:paddingTop="10dp"
                    android:text="XXXXXXXXX"/>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/id_victory_scoreBOT_TV"
                    android:layout_width="match_parent"
                    android:textColor="#27286D"
                    android:gravity="center"
                    android:text="x"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"
                    android:textSize="50dp"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/id_victory_elseBOT_TV"
                    android:layout_width="match_parent"
                    android:textSize="16dp"
                    android:textColor="#27286D"
                    android:text="x"
                    android:paddingBottom="10dp"
                    android:gravity="center"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
